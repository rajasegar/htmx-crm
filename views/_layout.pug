doctype html
html(lang="en")
  head
    title htmx CRM
    link(href="/styles.css", rel="stylesheet")
  body.font-sans.leading-none.text-gray-700.antialiased
    div
      div(class='md:flex md:flex-col')
        div(class='md:h-screen md:flex md:flex-col')
          div(class='md:flex md:flex-shrink-0')
            .bg-indigo-900.px-6.py-4.flex.items-center.justify-between(class='md:flex-shrink-0 md:w-56 md:justify-center')
              a.mt-1.text-white.font-bold(href='https://demo.inertiajs.com/')
                | htmx-CRM
              button(type='button' class='md:hidden')
                svg.fill-white.w-6.h-6(xmlns='http://www.w3.org/2000/svg' viewBox='0 0 20 20')
                  path(d='M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z')

            .bg-white.border-b.w-full.p-4.text-sm.flex.justify-between.items-center(class='md:py-0 md:px-12 md:text-md')
              .mt-1.mr-4 Acme Corporation
              button.mt-1(type='button')
                .flex.items-center.cursor-pointer.select-none.group
                  .text-gray-700.mr-1.whitespace-nowrap(class='group-hover:text-indigo-600 focus:text-indigo-600')
                    span John
                    span.hidden(class='md:inline') Doe
                  svg.w-5.h-5.fill-gray-700(xmlns='http://www.w3.org/2000/svg' viewBox='0 0 20 20' class='group-hover:fill-indigo-600 focus:fill-indigo-600')
                    path(d='M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z')
                // 
            div(class='md:flex md:flex-grow md:overflow-hidden')

          div(class='md:flex md:flex-grow md:overflow-hidden')
            include _sidebar
            block body

    script(src="https://unpkg.com/htmx.org@1.3.1")
    script(src="https://unpkg.com/hyperscript.org@0.0.8")
